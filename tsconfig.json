{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "lib": ["dom"],
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
